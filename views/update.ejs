<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets</h1>
    <p class="secret-text">Update your Secret!</p>

    <form action="/updateSecret" method="POST">

      <div class="form-group">
        <input type="text" class="form-control text-center" name="secret" value="<%=secret%>" >
          <input type="hidden" value="<%=secretID%>" name="secretID">
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
